{
  "name": "@loolabs/club-server",
  "version": "0.0.0-development",
  "description": "REST API server for Loo Labs' centralized club platform",
  "main": "index.js",
  "repository": "https://github.com/loolabs/clubs",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write",
    "migration:create": "npx mikro-orm migration:create",
    "start:dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "test:all": "jest --maxWorkers =1",
    "test:unit": "jest --testPathPattern=unit.ts$ --maxWorkers=1",
    "test:integration": "jest --testPathPattern=integration.ts$ --maxWorkers=1"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.3.4",
    "@mikro-orm/core": "^4.3.4",
    "@mikro-orm/postgresql": "^4.3.4",
    "@mikro-orm/reflection": "^4.3.4",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "joi": "^17.3.0",
    "node-mocks-http": "^1.9.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": ["prettier --write"]
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
